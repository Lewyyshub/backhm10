<h1>Edit Expense</h1>
<form action="/expenses/<%= expense.id %>?_method=PUT" method="POST" enctype="multipart/form-data">
  <input type="text" name="name" value="<%= expense.name %>" required />
  <input type="number" name="amount" value="<%= expense.amount %>" required />
  <% if (expense.image) { %>
    <img src="<%= expense.image %>" width="100" /><br />
  <% } %>
  <input type="file" name="image" accept="image/*" />
  <button type="submit">Update</button>
</form>
